# PowerDesk Authentication Environment Variables
# Copy this file to .env and set your secure values

# API Tokens (Base64 encoded strings)
# Generate new tokens using: python -c "import base64, secrets; print(base64.b64encode(secrets.token_bytes(32)).decode())"
API_TOKEN_1=your-api-token-1-here
API_TOKEN_2=your-api-token-2-here
API_TOKEN_3=your-api-token-3-here

# User Passwords (Use strong passwords in production)
TEKNISI_PASSWORD=your-teknisi-password-here
APT_PASSWORD=your-apt-password-here
ADMIN_PASSWORD=your-admin-password-here

# Raspberry Pi Passwords
RPI_PASSWORD=raspberry

# Security Settings
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
TOKEN_EXPIRY_HOURS=24

# Database Settings (for future implementation)
# DATABASE_URL=postgresql://user:password@localhost/powerdesk
# REDIS_URL=redis://localhost:6379/0

# Logging Settings
SECURITY_LOG_FILE=security.log
ENABLE_SECURITY_LOGGING=true

# Application Settings
SECRET_KEY=your-secret-key-here
FLASK_ENV=production
